# Google Cloud Configuration
# Copy this file to .env and fill in your actual values
# Do not use quotes around the values

# Your Google Cloud Project ID
PROJECT_ID=your-project-id

# Unique bucket name for storing files (must be globally unique)
BUCKET_NAME=your-unique-bucket-name

# DataProc cluster configuration
CLUSTER_NAME=train-analysis-cluster
REGION=us-central1
ZONE=us-central1-a

# Cluster specifications (optional - defaults will be used if not set)
NUM_WORKERS=2
WORKER_MACHINE_TYPE=n1-standard-4
MASTER_MACHINE_TYPE=n1-standard-2
WORKER_BOOT_DISK_SIZE=50GB
MASTER_BOOT_DISK_SIZE=50GB

# Auto-scaling settings (optional)
MAX_WORKERS=5

# DataProc image version (optional)
IMAGE_VERSION=2.0-debian10 